// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "buffer_font_family": "MesloLGM Nerd Font",
  "lsp": {
    "vtsls": {
      "enable_lsp_tasks": false,
      "settings": {
        "typescript.preferences.importModuleSpecifier": "non-relative",
      },
    },
    "oxc": {
      "initialization_options": {
        "options": {
          "configPath": null,
          "tsConfigPath": null,
          "unusedDisableDirectives": "allow",
          "typeAware": true,
        },
      },
    },
  },
  "agent_servers": {
    "gemini": {
      "ignore_system_version": false,
    },
    "claude": {
      "ignore_system_version": false,
    },
  },
  "languages": {
    "Python": {
      "code_actions_on_format": {
        "source.organizeImports.ruff": false,
      },
      "language_servers": ["!basedpyright", "ruff", "ty", "!pyrefly", "!pyright", "!pylsp", "..."],
      "formatter": {
        "language_server": {
          "name": "black",
        },
      },
    },
    "TSX": {
      "language_servers": ["!typescript-language-server", "!vtsls", "tsgo", "..."],
      "prettier": {
        "allowed": true,
      },
    },
    "TypeScript": {
      "language_servers": ["!typescript-language-server", "!vtsls", "tsgo", "..."],
      "prettier": {
        "allowed": true,
      },
    },
  },
  "code_actions_on_format": {
    "source.organizeImports": true,
    "source.fixAll.eslint": true,
    "source.fixAll.oxc": true,
  },
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-5",
    },
    "always_allow_tool_actions": true,
    "model_parameters": [],
  },
  "context_servers": {
    "local-mcp-server": {
      "command": "npx",
      "args": ["-y", "@agentdeskai/browser-tools-mcp@latest"],
    },
  },
  "terminal": {
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "nushell",
      },
    },
    "font_family": "MesloLGM Nerd Font",
    "font_size": 12,
    "line_height": {
      "custom": 1.4,
    },
  },
  "minimap": {
    "show": "auto",
  },
  "autosave": "on_focus_change",
  "confirm_quit": true,
  "linked_edits": true,
  "preferred_line_length": 160,
  "base_keymap": "Cursor",
  "ui_font_size": 15,
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Fleet Dark",
  },
  "icon_theme": "Material Icon Theme",
}

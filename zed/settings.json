{
  "buffer_font_family": "MesloLGM Nerd Font",
  "lsp": {
    "vtsls": {
      "settings": {
        "typescript": {
          "updateImportsOnFileMove": {
            "enabled": "always",
          },
        },
        "javascript": {
          "updateImportsOnFileMove": {
            "enabled": "always",
          },
        },
      },
      "enable_lsp_tasks": true,
    },
  },
  "agent_servers": {
    "gemini": {
      "ignore_system_version": false,
    },
    "claude": {
      "ignore_system_version": false,
    },
  },
  "languages": {
    "Python": {
      "code_actions_on_format": {
        "source.organizeImports.ruff": false,
      },
      "language_servers": ["!basedpyright", "ruff", "ty", "!pyrefly", "!pyright", "!pylsp", "..."],
      "formatter": {
        "language_server": {
          "name": "black",
        },
      },
    },
    "TSX": {
      "format_on_save": "on",
      "language_servers": ["eslint", "!typescript-language-server", "vtsls", "!oxlint", "!oxfmt", "..."],
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
      },
    },
    "TypeScript": {
      "format_on_save": "on",
      "language_servers": ["eslint", "!typescript-language-server", "vtsls", "!oxlint", "!oxfmt", "..."],
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
      },
    },
    "Nix": {
      "language_servers": [],
      "formatter": {
        "external": {
          "command": "alejandra", // or "nixfmt"
          "arguments": ["--quiet", "--"],
        },
      },
    },
  },
  "code_actions_on_format": {
    "source.organizeImports": true,
  },
  "agent": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-5",
    },
    "always_allow_tool_actions": true,
    "model_parameters": [],
  },
  "terminal": {
    "font_family": "MesloLGM Nerd Font",
    "font_size": 12,
    "line_height": {
      "custom": 1.4,
    },
  },
  "minimap": {
    "show": "auto",
  },
  "autosave": "on_focus_change",
  "confirm_quit": true,
  "linked_edits": true,
  "preferred_line_length": 160,
  "base_keymap": "Cursor",
  "ui_font_size": 15,
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Fleet Dark",
  },
  "icon_theme": "Material Icon Theme",
}
